{
  "/register": {
    "post": {
      "summary": "Register a new user",
      "tags": [
        "user"
      ],
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "surname": {
                  "type": "string"
                },
                "email": {
                  "type": "string",
                  "format": "email"
                },
                "password": {
                  "type": "string",
                  "minLength": 6
                }
              },
              "required": [
                "name",
                "surname",
                "email",
                "password"
              ]
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "User registered successfully"
        },
        "409": {
          "description": "Conflict - User already exists",
          "content": {
            "application/json": {
              "example": {
                "message": "User already exists"
              }
            }
          }
        },
        "default": {
          "description": "Unexpected error",
          "content": {
            "application/json": {
              "example": {
                "message": "Internal Server Error"
              }
            }
          }
        }
      }
    }
  }
}